{
    "name": "andileco/csvsort",
    "description": "High-performance CSV sorting library using external merge sort algorithm for massive files. Built for drupal/views_csv_source with league/csv integration.",
    "type": "library",
    "keywords": ["csv", "sorting", "performance", "external-sort", "merge-sort", "drupal", "league-csv", "fibers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andileco",
            "email": "dev@andileco.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "league/csv": "^9.27"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Andileco\\CsvSort\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Andileco\\CsvSort\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=max"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
